    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Play 'autopilot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=autopilot",
                    "--package=autopilot"
                ],
                "filter": {
                    "name": "autopilot",
                    "kind": "bin"
                }
            },
            "args": [
                "-s=play",
                "-f=C:\\PersonalRepo\\brave_auto_earn\\recordings\\recording_2.toml"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Record 'autopilot'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=autopilot",
                    "--package=autopilot"
                ],
                "filter": {
                    "name": "autopilot",
                    "kind": "bin"
                }
            },
            "args": [
                "-s=record",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'autopilot'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=autopilot",
                    "--package=autopilot"
                ],
                "filter": {
                    "name": "autopilot",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}